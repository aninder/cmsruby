<p class="alert alert-success"><%= notice %></p>

<h1 class="alert-danger text-center">
  Category:<%= @category.name %>
</h1>
<% @category.pages.each do |p| %>
    <article class="panel panel-success">
      <div class="panel-heading">
        <%= link_to p.title.gsub(/\b[a-z]/) { $&.capitalize }, admin_page_path(p) %>
      </div>
      <div class="panel-body">
        <%= p.body %>
      </div>
      <div class="text-muted panel-footer text-right">
        <%= time_ago_in_words p.created_at %>
      </div>
    </article>
<% end %>
<%= link_to 'Edit', edit_admin_category_path(@category) %> |
<%= link_to 'Back', admin_categories_path %>
